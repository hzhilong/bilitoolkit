{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./src/shared/env.d.ts",
    "./auto-imports.d.ts",
    "./components.d.ts",
    "./src/renderer/global.d.ts",
    "./src/renderer/**/*",
    "./src/renderer/**/*.vue",
    "./src/shared/**/*.d.ts",
    "./src/shared/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./src/**/__tests__/*"
  ],
  "compilerOptions": {
    // 启用所有严格类型检查
    "strict": true,
    // 使用 .ts 和 .tsx 扩展名
    "allowImportingTsExtensions": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    // vue jsx
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxImportSource": "vue",
    "jsxFragmentFactory": "Fragment",
    // 包含的全局类型声明包
    // "types": ["vite/client"],
    // 包含哪些内置的API声明文件
    "lib": [
      "DOM",
      "ESNext"
    ]
    // https://www.typescriptlang.org/tsconfig/#verbatimModuleSyntax
    // 想关闭import显示类型，但vue好像推荐打开
    // https://cn.vuejs.org/guide/typescript/overview
    //    "verbatimModuleSyntax": false
  }
}
