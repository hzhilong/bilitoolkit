{
  "name": "bilitoolkit",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "productName": "BiliToolkit",
  "productCNName": "哔哩工具姬",
  "description": "BiliToolkit「哔哩工具姬」是一款面向B站用户和开发者的开源工具箱，采用模块化插件架构设计，致力于通过可扩展的功能集合提升用户体验。用户可自由安装/卸载功能模块，开发者可快速开发新插件共享至社区。",
  "author": "hzhilong",
  "keywords": [
    "BiliToolkit",
    "哔哩工具姬"
  ],
  "appId": "io.github.hzhilong.bilitoolkit",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/hzhilong/BiliToolkit"
  },
  "bugs": {
    "url": "https://github.com/hzhilong/BiliToolkit/issues"
  },
  "homepage": "https://github.com/hzhilong/BiliToolkit#readme",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "删除缓存": "rimraf node_modules/.vite",
    "dev": "chcp 65001 && vite",
    "添加本地依赖包": "yalc add bilitoolkit-api-types @ybgnb/utils bilitoolkit-ui",
    "备注": "本地依赖库在版本未更改的情况下，代码会被vite缓存，注意！！！",
    "移除本地依赖包": "yalc remove --all",
    "build:preloads": "tsx scripts/build-preloads.ts",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@npm/types": "^2.1.0",
    "@vueuse/core": "^13.9.0",
    "@vueuse/integrations": "^13.9.0",
    "@ybgnb/utils": "file:.yalc/@ybgnb/utils",
    "axios": "^1.12.1",
    "bilitoolkit-api-types": "file:.yalc/bilitoolkit-api-types",
    "bilitoolkit-ui": "file:.yalc/bilitoolkit-ui",
    "consola": "^3.4.2",
    "dayjs": "^1.11.18",
    "element-plus": "^2.11.2",
    "log4js": "^6.9.1",
    "lowdb": "^7.0.1",
    "marked": "^16.3.0",
    "md5": "^2.3.0",
    "nanoid": "^5.1.5",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "qrcode": "^1.5.4",
    "remixicon": "^4.6.0",
    "update-electron-app": "^3.1.1",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/lodash": "^4.17.16",
    "@types/md5": "^2.3.5",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "lodash": "^4.17.21",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "sass": "^1.92.1",
    "tsx": "^4.20.5",
    "typescript": "~5.8.0",
    "unplugin-auto-import": "^20.1.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.0.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4"
  }
}
